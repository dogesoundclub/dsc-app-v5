{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@img/*": ["public/img/*"],
      "@fonts/*": ["public/fonts/*"],

    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "api/auth/*.ts", "api/restricted.ts"],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@img/*": ["public/img/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "api/*", "pages/api/restricted.js", "pages/api/auth/[...nextauth]"],
  "exclude": ["node_modules"]
}
